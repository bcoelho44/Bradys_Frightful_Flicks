<section class="hero is-primary">
  <div class="hero-body">
    <div class="container">
      <h1 class="title has-text-centered">Welcome to Brady's Frightful Flicks!</h1>
      <p class="subtitle has-text-centered">Explore our collection of classic horror movies.</p>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <!-- Featured Movies Section -->
    <h2 class="title has-text-centered">Featured Movies</h2>
    <div class="columns is-multiline">
      <% @featured_products.each do |movie| %>
        <div class="column is-one-quarter"> <!-- Ensures 4 movies per row -->
          <div class="card">
            <% if movie.image.attached? %>
              <div class="card-image">
                <figure class="image is-4by3">
                  <%= image_tag movie.image.variant(resize_to_fill: [300, 200]).processed, class: "is-rounded" %>
                </figure>
              </div>
            <% end %>
            <div class="card-content">
              <p class="title is-4"><%= link_to movie.title, product_path(movie), class: "has-text-primary" %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <!-- Browse by Category Section -->
    <h2 class="title has-text-centered">Browse by Category</h2>
    <div class="columns is-multiline">
      <% @categories.each do |category| %>
        <div class="column is-one-quarter"> <!-- Ensures 4 categories per row -->
          <div class="box has-background-light has-text-centered">
            <h3 class="title is-5"><%= link_to category.name, category_products_path(category.id), class: "has-text-link" %></h3>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
