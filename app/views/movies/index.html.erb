<section class="section">
  <div class="container">
    <h1 class="title">All Movies</h1>

    <div class="columns is-multiline">
      <% @movies.each do |movie| %>
        <div class="column is-one-third">
          <div class="card">
            <% if movie.image.attached? %>
              <div class="card-image">
                <figure class="image is-4by3">
                  <%= image_tag url_for(movie.image) %>
                </figure>
              </div>
            <% end %>

            <div class="card-content">
              <p class="title is-4"><%= link_to movie.title, movie_path(movie) %></p>
              <p class="subtitle is-6">Directed by <%= movie.director %></p>
              <p><strong>Price:</strong> $<%= number_to_currency(movie.price) %></p>
              <p><strong>Subgenres:</strong> <%= movie.subgenres.map(&:name).join(', ') %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
